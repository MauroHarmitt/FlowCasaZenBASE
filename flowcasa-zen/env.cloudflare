# 🔒 Configuración de seguridad adicional
TRUST_PROXY=true
FORCE_HTTPS=true

# 📊 Configuración de logs
LOG_LEVEL=info
LOG_FORMAT=combined

# ⚡ Configuración de performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600
